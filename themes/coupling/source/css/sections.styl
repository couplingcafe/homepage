@import 'settings'

section.hero
  sectionPurple()
  padding-top 0
  z-index 20

  .header
    flexCenter()
    gap 15px
    +media600()
      gap 15px
    +media1200()
      gap 5px

    .wordmark
      color $yellow
      font-size 38px
      font-family 'Titan One'
      font-weight normal
      margin 0
      text-shadow 0 2px 2px rgba(20, 0, 20, 0.15)
      text-transform uppercase
      +media600()
        font-size 42px
        line-height 56px
      +media1200()
        font-size 60px
        margin-right 30px

    .logo
      object-fit contain
      max-width 48px
      +media600()
        max-width 60px
      +media1200()
        max-width 100px
        width 100px


  .sectionInner
    padding-bottom 20px
    +media1200()
      flex-direction row
      flex-wrap nowrap
      padding-left 30px
      padding-right 30px
      padding-bottom 100px
      padding-top 100px
      width calc(100% - 60px)

  .heroContent
    display flex
    flex-direction column
    max-width 100%
    gap 15px
    +media600() 
      gap 20px
    +media1200()
      bottom 20px
      margin 0 100px 0 20px
      position relative
      gap 30px

  .button
    line-height 1.5

  img.hero
    &.heroImgDesktop
      display none
      height 600px
      max-width 100%
      margin-right -50px
      margin-bottom -40px
      position relative
      right 60px
      +media1200()
        display inline-block
      +media1600()
        right 0

    &.heroImgMobile
      display inline-block
      object-fit contain 
      max-height 400px
      max-width 100%
      +media600()
        max-height 500px
      +media1200()
        display none

  .title
    color $white
    font-size 24px
    textShadow()
    +media600()
      font-size 36px
    +media1200()
      font-size 42px

  .subtitle
    font-size 16px
    max-width 100%
    text-align center
    opacity 0.75 !important
    +media600()
      font-size 22px
    +media1200()
      margin-bottom 10px
      margin-top -20px

  .appStoreButtons
    flexCenter()
    gap 20px

    a 
      display inline-block
      position relative
      img 
        height auto
        width 150px
        object-fit contain
        +media600()
          width 180px
        +media1200()
          width 200px

section.testimonials
  sectionRed()
  z-index 12
  background linear-gradient(180deg, $darkblue 0%, $red 200%);

  .wave path
    fill rgb(169,135,158);

  ul.testimonialList
    display flex
    flex-direction column 
    justify-content center
    gap 35px
    padding 0 5px
    +media600()
      flex-direction row
      padding 0 20px
      gap 50px
  p, b
    color $white
    text-align center
    +media600()
      font-size 16px
      max-width 600px
  b 
    color $blue
  a
    color $red
  li
    display flex
    flex 1
    flex-direction column
    align-items center
    gap 10px
    +media600()
      gap 20px

  i
    color $yellow
    font-size 40px
    margin-bottom 10px 
    +media600()
      font-size 50px
  .quote
    font-weight bold
  .attr
    color $red

section.howItWorks
  sectionYellow()
  z-index 10

  .sectionSubtitle 
    font-weight bold

  ul.howItWorksItems
    align-items center 
    display flex
    flex-direction column
    justify-content flex-start 
    margin 0 10px
    gap 30px

    +media1200()
      align-items flex-start
      flex-direction row
      justify-content space-evenly
      margin 0 50px
      gap 50px

    li
      flexCenter(column)
      flex 1
      gap 15px
      +media1200()
        gap 30px
        align-items center
        max-width 500px

      .text
        flexCenter(column)
        gap 10px
        h4 
          font-size 20px 
        p
          text-align center
        i
          color $text
          font-size 24px
          textShadow()
          margin-right 15px
          min-width 30px
          text-align: center 

      img 
        margin 0 auto
        max-height 320px
        +media1200()
          max-height auto 
          max-width 80%

section.intro
  sectionGreen()
  z-index 6
  a
    text-decoration underline

section.partner
  sectionRed()
  z-index 5
  a
    text-decoration underline

section.flashcard
  sectionBlue()
  z-index 4
  a
    text-decoration underline

section.path
  sectionGreen()
  z-index 3
  a
    text-decoration underline

section.blogSection
  sectionDarkBlue()
  z-index 1

  h3
    color $white

  .blog
    flexCenter(column)
    gap 10px
    margin-top 0
    max-width 1024px
    width 100%
    +media600()
      flex-direction row 
      flex-wrap wrap
    li
      align-items center
      boxShadow()
      border-radius 5px 2px 5px 2px
      display flex
      height 320px
      margin 0
      overflow hidden
      position relative
      width 480px 
      max-width 100%

      &:hover .wave path
        fill $red
      .wave
        bottom 50px
        box-shadow none
        left 0
        right 0
        margin 0 auto
        transform scaleX(5) scaleY(0.5) rotate(180deg)
        z-index 55
        path
          fill rgba($red, 0.95)
          transition fill .2s

    .blogImage
      background $yellow
      border-radius 5px
      boxShadow()
      display inline-block
      margin 0
      position relative
      transform scale(1)
      transition all .15s
      height 100% 
      width 100% 
      &:hover .blogOverlay
        background $red
      img
        object-fit cover 
        width 100%
        height 100%

    .blogOverlay
      align-items flex-start
      background rgba($red, 0.95)
      border-radius 0
      bottom 0
      display flex
      flex-direction column
      justify-content flex-start
      padding 5px 10px 10px 15px
      position absolute
      transition background .2s
      width 100%
      +media600()
        padding 5px 15px 10px 20px
      p
        color #444
        font-size 14px
        line-height 1.5
        margin 0
        max-width 90%
        overflow hidden
        text-overflow ellipsis
        text-shadow none
        white-space nowrap
      h3
        color #444
        font-size 18px
        font-weight normal
        line-height 1.5
        margin 0
        max-width 90%
        overflow hidden
        text-overflow ellipsis
        text-shadow none
        white-space nowrap
        +desktop()
          font-size 18px
      a
        text-shadow none
        img
          absCenter()
          background none
          border-radius 2px
          z-index 0

section.about
  sectionYellow()
  z-index 0
  p
    line-height 2
    text-align center
  img
    border-radius 200px
    height 200px
    width 200px
    boxShadow()
  a
    color $black
