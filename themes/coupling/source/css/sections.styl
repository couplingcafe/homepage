@import 'settings'

.header
  flexCenter()
  gap 15px
  +media600()
    gap 15px
  +media1200()
    gap 5px

  .wordmark
    color $yellow
    font-size 38px
    font-family 'Titan One'
    font-weight normal
    margin 0
    text-shadow 0 2px 2px rgba(20, 0, 20, 0.15)
    text-transform uppercase
    +media600()
      font-size 42px
      line-height 56px
    +media1200()
      font-size 60px
      margin-right 30px

  .logo
    object-fit contain
    max-width 48px
    +media600()
      max-width 60px
    +media1200()
      max-width 100px
      width 100px

section.hero
  sectionPurple()
  padding-top 0
  z-index 20

  .sectionInner
    padding-bottom 20px
    +media1200()
      flex-direction row
      flex-wrap nowrap
      padding-left 30px
      padding-right 30px
      padding-bottom 100px
      padding-top 100px
      width calc(100% - 60px)

  .heroContent
    display flex
    flex-direction column
    max-width 100%
    gap 15px
    +media600() 
      gap 20px
    +media1200()
      bottom 20px
      margin 0 100px 0 20px
      position relative
      gap 30px

  .button
    line-height 1.5

  img.hero
    &.heroImgDesktop
      display none
      height 600px
      max-width 100%
      margin-right -50px
      margin-bottom -40px
      position relative
      right 60px
      +media1200()
        display inline-block
      +media1600()
        right 0

    &.heroImgMobile
      display inline-block
      object-fit contain 
      max-height 400px
      max-width 100%
      +media600()
        max-height 500px
      +media1200()
        display none

  .title
    color $white
    font-size 24px
    text-shadow 0px 1px 1px rgba(0, 0, 0, 0.1)
    +media600()
      font-size 36px
    +media1200()
      font-size 42px

  .subtitle
    font-size 16px
    max-width 100%
    text-align center
    +media600()
      font-size 22px
    +media1200()
      font-size 26px

  .appStoreButtons
    align-items center
    display flex
    flex-direction row
    justify-content center 
    gap 20px

    a 
      display inline-block
      position relative
      img 
        height auto
        width 150px
        +media600()
          width 180px
      .unreleased
        color $gray
        position absolute
        font-size 12px
        left 0
        right 0
        margin 0 auto
        text-align center
        font-style italic
        +media1200()
          bottom -30px 

  .additionalLinks
    flexCenter(column)
    gap 10px
    padding-top 30px
    +media1200()
      flex-direction row 
      padding-top 10px
    a 
      width 80%
      +media1200()
        width auto

  .langSupport
    color $gray
    display inline-block
    font-weight bold
    font-size 14px 
    text-align center
    padding-right 0
    margin-right 0
    padding-top 50px
    width auto
    +media600()
      font-size 16px 
    i
      margin-right 10px

section.partner
  sectionYellow()
  z-index 5
  a
    text-decoration underline

section.flashcard
  sectionRed()
  z-index 4
  a
    text-decoration underline

section.blogSection
  sectionDarkBlue()
  z-index 1

  h3
    color $white

  .blog
    align-items center
    display flex
    flex-direction column
    gap 10px
    justify-content center
    margin-top 0
    max-width 1024px
    width 100%
    +media600()
      flex-direction row 
      flex-wrap wrap
    li
      align-items center
      boxShadow()
      border-radius 5px 2px 5px 2px
      display flex
      margin 0
      max-width 100%
      overflow hidden
      position relative
      width 100%
      +media600()
        width auto
      .wave
        bottom 50px
        box-shadow none
        left 0
        right 0
        margin 0 auto
        transform scaleX(5) scaleY(0.5) rotate(180deg)
        z-index 55
        path
          fill rgba($red, 0.95)
          transition fill .2s
      &:hover .wave path
        fill $red
      +media1200()
        .wave
          bottom 50px
          transform scaleX(2.285) scaleY(0.5) rotate(180deg)
    p
      color #444
      font-size 16px
      line-height 1.5
      margin 0
      max-width 90%
      overflow hidden
      text-overflow ellipsis
      text-shadow none
      white-space nowrap
    h3
      color #444
      font-size 16px
      font-weight normal
      line-height 1.5
      margin 0
      max-width 80%
      overflow hidden
      text-overflow ellipsis
      text-shadow none
      white-space nowrap
      +desktop()
        font-size 18px
    a
      text-shadow none
     img
       background none
       border-radius 2px
       bottom 0
       left 0
       margin 0 auto
       max-height 180px
       position absolute
       right 0
       text-align center
       top 20px
       z-index 0
    .blogImage
      background $purple
      border-radius 5px
      boxShadow()
      display inline-block
      height 240px
      margin 0
      max-width 100%
      position relative
      transform scale(1)
      transition all .15s
      width 100% 
      +media600()
        width 320px
      &:hover .blogOverlay
        background $red
    .blogOverlay
      align-items flex-start
      background rgba($red, 0.95)
      bottom 0
      border-radius 0
      display flex
      align-items flex-start
      flex-direction column
      justify-content flex-start
      padding 10px
      position absolute
      transition background .2s
      width 100%
      +media1200()
        padding 5px 20px 10px 20px
    .blogDate
      color $white

section.about
  sectionYellow()
  z-index 0
  p
    line-height 2
    text-align center
  img
    border-radius 200px
    height 200px
    width 200px
    boxShadow()
  a
    color $black
    font-weight bold
