@font-face {
  font-family: Knicknack;
  src: url("/assets/fonts/knicknack.otf") format("opentype");
}

$black=#333
$blue=#9ADEFE
$darkblue=#555588
$purple=#D4C3E6
$red=#F7B8B5
$white=#FCFCFC
$yellow=#F4E3B7

$primary=$purple
$secondary=$blue
$tertiary=$yellow
$text=$black
$shadow=rgba(0, 0, 0, 0.25)

$blueend=#A8E3FF
$purpleend=#E2CFF7
$yellowend=#FFEDBD

boxShadow()
  box-shadow 0px 2px 2px $shadow 

boxShadowFocus()
  box-shadow 0px 0 0 2px $primary

gradient($start, $end)
  background radial-gradient(50% 50% at 50% 50%, $start 0%, $end 100%)

wave($color)
  .wave path 
    fill $color 

textShadow()
  text-shadow 0px 4px 4px rgba(0, 0, 0, 0.25)

inputHover()
  transform none
  transition all .2s
  &:focus,
  &:hover
    box-shadow 0px 6px 6px rgba(0, 0, 0, 0.2)
    transform translate3d(-2px, -2px, 0)
  &:active
    box-shadow 0px 2px 2px rgba(0, 0, 0, 0.3)
    transform none

backgroundBlock()
  boxShadow()
  height 100%
  left -100%
  position absolute
  top 0
  transform rotate3d(0, 0, 1, -7.5deg)
  width 300%
  z-index -1

