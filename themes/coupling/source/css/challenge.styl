@import 'settings';

[data-type="challenge"]
  section.challenge
    sectionDarkBlue()
    color $white
    padding-top 40px
    width 100%
    z-index 10

  .pageHeader
    align-items center
    display flex
    flex-direction column
    text-decoration none
    text-align center
    &:hover
      text-decoration none

    .wordmark
      color $yellow
      font-family 'Titan One'
      font-size 42px
      line-height 56px
      margin-bottom 0
      margin-top 0
      textShadow()
      text-transform uppercase
      +media1200()
        font-size 60px

  .subtitle
    color $white
    font-size 24px
    font-weight bold
    font-family 'Fredoka One'
    margin-top 10px 
    textShadow()

  .pageImage
    max-width 320px

  .pageTitle
    color $white
    font-size 32px
    margin-bottom 10px 
    margin-top 20px
    background linear-gradient(90deg, #9ADEFE 3.85%, #F7B8B5 98.42%)
    position relative
    -webkit-background-clip text
    -webkit-text-fill-color transparent
    text-shadow none
    &:after
      background none
      content attr(data-text)
      left 0
      top 0
      z-index -1
      position absolute
      textShadow()
    +media1200()
      font-size 60px

  .challengeName
    color $white
    margin 0

  .content
    color $white
    padding-bottom 50px
    text-align left

    h2
      font-size 28px
      line-height 34px
      margin-top 50px
      color $yellow
      i
        margin-right 5px

    h3
      font-size 22px
      line-height 28px
      text-align left
      color $white

  section.subscribe
    sectionYellow()
    z-index 2
    form
      margin-top 0

  section.construction
    sectionBlue()
    z-index 1
    img 
      max-height 200px
    p
      text-align justify
