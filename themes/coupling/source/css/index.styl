@import 'settings'

html
  background $purple
  padding 0

html,
body
  color $text
  font-weight 500
  height 100%
  margin 0
  overflow-x hidden
  position relative
  width 100%

body
  font-family 'Raleway', sans-serif
  opacity 0
  padding 0
  transition opacity 0.25s
  &.loaded
    opacity 1 !important

ol
  padding-left 20px

ul
  list-style none
  padding 0

  li
    margin 10px 0

b, p, li
  font-size 18px
  line-height 1.5
  +media1200()
    font-size 20px
    line-height 36px
    max-width 800px
    text-align justify

a
  color $text
  font-weight bold
  text-decoration none
  transition all .2s
  &:hover:not(.button)
    text-decoration underline

h1, h2, h3
  color #3A303A
  font-family 'Fredoka One', sans-serif
  textShadow()

h3
  font-size 28px
  line-height 42px
  +mobile()
    margin-top 0

button,
.button,
input[type="submit"]
  background $blue
  backface-visibility hidden
  border 0
  border-radius 5px
  boxShadow()
  color $text
  cursor pointer
  display inline-block
  font-size 18px
  margin-top 30px
  max-width 768px
  inputHover()
  padding 15px 30px 15px 30px
  text-decoration none
  transform none
  vertical-align middle
  &[disabled]
    pointer-events none
  &:hover
    background lighten($blue, 20%)
  &:active
    background darken($blue, 5%)
  &.green
    background $green
    &:hover
      background lighten($green, 20%)
    &:active
      background darken($green, 5%)
  &.purple
    background $purple
    &:hover
      background lighten($purple, 20%)
    &:active
      background darken($purple, 5%)
  i
    margin-right 5px

input[type="email"],
input[type="text"]
  background #FAFAFA
  border 0
  border-radius 5px
  boxShadow()
  color $text
  font-family 'Font Awesome 5 Pro', 'Raleway'
  font-size 18px
  height 50px
  inputHover()
  margin-bottom 15px
  max-width 768px
  text-align center
  transition all .2s
  vertical-align middle

.header
  align-items center
  display flex
  justify-content center
  margin-bottom 30px

  .wordmark
    color $yellow
    font-family 'Titan One'
    font-size 42px
    line-height 56px
    margin-bottom 0
    margin-right 20px
    margin-top 0
    text-shadow 0 2px 4px rgba(20, 0, 20, 0.25)
    text-transform uppercase
    +media1200()
      font-size 60px
      margin-right 30px

  .logo
    max-width 60px
    +media1200()
      max-width 100px
      width 100px

ul.bulletPoints
  align-items flex-start
  display flex
  flex-direction column
  margin-top 0
  li
    align-items center
    display flex
    text-align left
    +media1200()
      margin 15px 0
    i
      color $text
      font-size 24px
      textShadow()
      margin-right 30px
      min-width 30px
      +desktop()
        font-size 34px
        margin-right 40px
        width 30px

#container
  height 100%
  width 100%

section
  align-items center
  display flex
  flex-direction column
  position relative
  padding-top 80px
  text-align center
  width 100%
  +media1200()
    &:not(.hero)
      padding-bottom 20px

.sectionInner
  align-items center
  display flex
  flex-direction column
  flex-wrap wrap
  justify-content center
  padding 0 10px
  width calc(100% - 20px)
  h3 + p
    margin-top 5px
  > p
    text-align justify

  img + div > p:first-child
    margin-top 0
    +desktop()
      margin-top 22px

  .sectionInnerColumns
    align-items center
    display flex
    flex-direction column
    img
      margin-bottom 10px
      max-width 320px
      +mobile()
        max-height 480px
    > div
      display flex
      flex-direction column
      > p:first-child
        font-size 20px
        font-weight bold
        +desktop()
          font-size 22px
    +media1200()
      align-items flex-start
      display flex
      flex-direction row
      justify-content center
      flex-wrap nowrap
      > :first-child
        margin-right 50px
      &.reverse
        flex-direction row-reverse
        > :first-child
          margin-right 0
        > :last-child
          margin-right 50px

.wave
  bottom 0
  position absolute
  transform scaleX(5) translateY(35px)
  height 40px
  +media768()
    height 50px
    transform scaleX(10) translateY(45px)
  +media1200()
    transform scaleX(15) translateY(45px)

.button.ctaButton
  background $green
  &:hover
    background $greenend

section.hero
  sectionPurple()
  padding-top 20px
  z-index 20
  +media1200()
    padding-top 0

  .sectionInner
    padding-bottom 20px
    +media1200()
      flex-direction row
      flex-wrap nowrap
      padding-left 30px
      padding-right 30px
      padding-bottom 100px
      padding-top 100px
      width calc(100% - 60px)

  .heroLeft
    +media1200()
      margin 0 60px 0 20px
      position relative
      bottom 20px

  .button
    line-height 1.5

  img.hero
    &.heroImgDesktop
      display none
      height 500px
      max-width 100%
      margin-right -50px
      margin-bottom -40px
      position relative
      right 60px
      +media1200()
        display inline-block
      +media1600()
        right 0

    &.heroImgMobile
      display inline-block
      margin-bottom 0
      margin-top 20px
      max-height 600px
      max-width 100%
      +media1200()
        display none

  .title
    color $white
    font-size 36px
    margin-top 20px
    margin-bottom 15px
    text-shadow 0px 2px 2px rgba(0, 0, 0, 0.1)
    +media1200()
      font-size 42px
      margin-top 20px

  .subtitle
    font-size 22px
    margin 20px 0 0 0
    max-width 100%
    text-align center
    +media1200()
      font-size 26px
      margin 25px 0 35px 0

  .appStoreButtons
    align-items center
    display flex
    flex-direction row
    justify-content center 
    gap 20px

    a 
      display inline-block
      position relative
      &.android
        opacity 0.5
      img 
        height auto
        width 180px
      .unreleased
        position absolute
        font-size 12px
        left 0
        right 0
        margin 0 auto
        text-align center
        font-style italic
        bottom -30px 

section.problem
  sectionYellow()
  z-index 10

  p
    text-align center

  img
    border-radius 200px
    boxShadow()
    height 200px
    margin-bottom 20px
    width 200px

  .howItWorks
    display flex
    justify-content center
    margin-top 20px

    li
      align-items center
      display flex
      flex-direction column
      justify-content flex-start
      text-align center
      margin 0 20px

      &:nth-child(1) div
        background $blue
        textShadow()
      &:nth-child(2) div
        background $red
        textShadow()
      &:nth-child(3) div
        background $green
        textShadow()

      p
        max-width 300px
        text-align center

      div
        align-items center
        border 1px solid $shadow
        border-radius 200px
        boxShadow()
        display flex
        flex-direction column
        justify-content center
        height 100px
        width 100px
        i
          font-size 40px
        span
          font-size 30px

section.coach
  sectionYellow()
  z-index 5
  a
    text-decoration underline

section.flashcard
  sectionBlue()
  z-index 4
  a
    text-decoration underline

section.language
  sectionYellow()
  z-index 3

section.subscribe
  sectionPurple()
  padding-bottom 20px
  z-index 2
  .pourImage
    gradient($red, lighten($red, 20%))
    border-radius 300px
    boxShadow()
    height 150px
    width 150px
    img
      left 8px
      position relative
      max-width 150px
  .sectionInnerColumns
    align-items center

section.blogSection
  sectionDarkBlue()
  z-index 1

  h3
    color $white

  .blog
    display flex
    flex-wrap wrap
    justify-content center
    margin-top 0
    max-width 1024px
    width 90%
    li
      align-items center
      boxShadow()
      border-radius 5px 2px 5px 2px
      display flex
      margin 10px
      max-width 100%
      overflow hidden
      position relative
      .wave
        bottom 50px
        box-shadow none
        left 0
        right 0
        margin 0 auto
        transform scaleX(5) scaleY(0.5) rotate(180deg)
        z-index 55
        path
          fill rgba($red, 0.95)
          transition fill .2s
      &:hover .wave path
        fill $red
      +media1200()
        .wave
          bottom 50px
          transform scaleX(2.285) scaleY(0.5) rotate(180deg)
    p
      color #444
      font-size 16px
      line-height 1.5
      margin 0
      max-width 90%
      overflow hidden
      text-overflow ellipsis
      text-shadow none
      white-space nowrap
    h3
      color #444
      font-size 16px
      font-weight normal
      line-height 1.5
      margin 0
      max-width 80%
      overflow hidden
      text-overflow ellipsis
      text-shadow none
      white-space nowrap
      +desktop()
        font-size 18px
    a
      text-shadow none
     img
       background none
       border-radius 2px
       bottom 0
       left 0
       margin 0 auto
       max-height 180px
       position absolute
       right 0
       text-align center
       top 20px
       z-index 0
    .blogImage
      background $purple
      border-radius 5px
      boxShadow()
      display inline-block
      height 240px
      margin 0
      max-width 100%
      position relative
      transform scale(1)
      transition all .15s
      width 320px
      &:hover .blogOverlay
        background $red
    .blogOverlay
      align-items flex-start
      background rgba($red, 0.95)
      bottom 0
      border-radius 0
      display flex
      align-items flex-start
      flex-direction column
      justify-content flex-start
      padding 10px
      position absolute
      transition background .2s
      width 100%
      +media1200()
        padding 5px 20px 10px 20px
    .blogDate
      color $white

section.about
  sectionYellow()
  z-index 0
  p
    line-height 2
    text-align center
  img
    border-radius 200px
    height 200px
    width 200px
    margin-bottom 20px
    boxShadow()
  a
    color $black
    font-weight bold

.footer
  background $red
  padding-bottom 40px
  text-align center

  > div
    display flex
    flex-direction row
    justify-content center
    padding 80px 0 30px 0
    width 100%
    z-index -1

    a
      font-size 36px
      cursor pointer
      color $white
      margin 0 15px
      textShadow()
    svg
      fill $white
      height 40px
      width 40px
      transition fill .2s
      &:hover
        fill $blue

  .privacy
    color $text
    font-size 14px
    font-style italic
    margin 0 auto
    padding 10px 0
    width 100%
