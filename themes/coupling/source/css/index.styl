@import 'settings';

html
  background $purple
  padding 0

html,
body
  color $text
  font-weight 500 
  height 100%
  margin 0
  overflow-x hidden
  position relative
  width 100%

body
  font-family 'Raleway', sans-serif
  opacity 0
  padding 0
  transition opacity 0.25s
  &.loaded
    opacity 1 !important

ul
  list-style none
  padding 0

  li
    margin 10px 0

b, p, li
  font-size 20px
  line-height 36px
  +media1024()
    max-width 800px
    text-align justify

a
  color $white
  text-decoration none
  textShadow()
  transition all .2s
  &:hover:not(.button)
    color lighten($white, 20%)

h1, h2, h3
  color #3A303A
  font-family 'Fredoka One', sans-serif
  textShadow()

h3
  font-size 28px
  line-height 34px

button,
.button,
input[type="submit"]
  background $blue
  backface-visibility hidden
  border 0
  border-radius 5px
  boxShadow()
  color $text
  cursor pointer
  font-size 18px
  height 60px
  max-width 768px
  inputHover()
  padding 15px 30px 15px 30px
  transform none
  vertical-align middle
  &[disabled]
    pointer-events none
  &:hover
    background lighten($blue, 20%)
  &:active
    background darken($blue, 5%)

input[type="email"],
input[type="text"]
  background #FAFAFA
  border 0
  border-radius 5px
  boxShadow()
  color $text
  font-family 'Font Awesome 5 Pro', 'Raleway'
  font-size 18px
  height 50px
  inputHover()
  margin-bottom 15px
  max-width 768px
  text-align center 
  transition all .2s
  vertical-align middle

ul.bulletPoints
  align-items flex-start
  display flex
  flex-direction column
  margin-top 0
  li
    align-items center
    display flex
    text-align left
    i 
      color $white
      font-size 34px
      margin-right 40px
      textShadow()
      width 30px

#container
  height 100%
  width 100%

section
  align-items center
  display flex
  flex-direction column
  position relative 
  padding-top 60px
  text-align center
  width 100%
  +media1024()
    &:not(.hero)
      padding-bottom 20px

.sectionInner
  align-items center
  display flex
  flex-direction column
  flex-wrap wrap
  justify-content center
  padding 0 20px
  width calc(100% - 40px)
  h3 + p
    margin-top 5px 
  > p
    text-align justify

.wave
  bottom 0
  position absolute
  transform scaleX(5) translateY(35px)
  height 40px
  +media1024()
    height 50px
    transform scaleX(10) translateY(45px)

section.hero
  sectionPurple()
  padding-top 20px
  z-index 20
  +media1024()
    padding-top 40px

  .sectionInner
    padding-bottom 20px
    +media1024()
      flex-direction row
      flex-wrap nowrap
      padding-left 30px
      padding-right 30px
      padding-bottom 100px
      padding-top 100px
      width calc(100% - 60px)

  .heroLeft
    +media1024()
      margin-right 50px
    +media1200()
      margin-right 100px

  .header
    align-items center
    display flex
    justify-content center

    .wordmark
      color $yellow
      font-family 'Titan One'
      font-size 42px
      line-height 56px
      margin-bottom 0
      margin-right 20px
      margin-top 0
      text-shadow 0px 4px 4px rgba(0, 0, 0, 0.25)
      text-transform uppercas3
      +media1024()
        font-size 60px
        margin-right 30px

    .logo 
      max-width 60px 
      +media1024()
        max-width 100px
        width 100px 

  .heroImgDesktop
    display none
    margin-left -50px
    margin-right -50px
    +media1024()
      display inline-block 

  .heroImgMobile
    display inline-block 
    margin-bottom -50px
    +media1024()
      display none

  img.hero
    min-height 200px

  .title 
    color $white
    font-size 36px
    margin-top 20px 
    margin-bottom 15px 
    +media1024()
      font-size 45px
      margin-top 50px

  .subtitle 
    font-size 22px
    margin 0
    max-width 100%
    text-align center
    +media1024()
      font-size 26px
      margin 10px 0 20px 0

  .hero 
    max-width 600px 
    +media1024()
      margin-bottom -40px

  form.subscribe
    +media1024()
      align-items center
      flex-direction row
      flex-wrap nowrap
      input
        margin 0 20px 0 0
        width 60%
      button
        width 40%

form.subscribe
  align-items center
  display flex
  flex-direction column
  justify-content center
  margin-top 40px
  width 100%

  input,
  button 
    width 100%

  button
    font-weight bold

section.about
  gradient($yellow, $yellowend)
  wave($yellowend)
  z-index 10 

  img
    border-radius 200px
    boxShadow()
    height 200px 
    margin-bottom 20px
    width 200px 

section.flashcard
  sectionBlue()
  z-index 5
  .pourImage
    gradient($red, lighten($red, 20%))
    border-radius 300px
    boxShadow()
    height 150px
    margin 10px 0 20px 0
    width 150px
    img 
      left 8px
      position relative
      max-width 150px

section.coach
  sectionPurple()
  z-index 4

section.language
  sectionYellow()
  z-index 3

section.subscribe
  sectionBlue()
  padding-bottom 20px
  z-index 2
  button
    background $purple

section.footer
  display flex
  background $red
  flex-direction row
  justify-content center
  padding 80px 0 40px 0
  width 100%
  z-index 0

  a
    font-size 36px
    cursor pointer 
    color $white
    margin 0 15px
    textShadow()
  svg
    fill $white 
    height 40px
    width 40px
    transition fill .2s
    &:hover
      fill $blue
